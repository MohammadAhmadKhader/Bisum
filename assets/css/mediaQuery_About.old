
@media (min-width: 0px) and (max-width:575px){
    /* start of global */
    .container > h2{
        font-size: 32px  !important;
        line-height: 48px;
      }
/* end of global */


/* start of bar announcement */
.sales{
    margin: auto;
}
.phone-number,.login{
    display: none;
}
/* End of bar announcement */
/* Start of promotional */
.promo-text{
    padding:10px ;   
}
.promo-text h2{
    font-size:24px;
    line-height:31px;
    font-weight: 600;
    letter-spacing:-0.03em ;
    color:white;

 }
 .promo-text p{
    font-size:16px ;
    line-height: 24px;
    font-weight: 600;
    letter-spacing:-0.03em;
    color: white;
    opacity: 0.7;
 }
 /* end of promotional */

 /* Start of services */
 
 .services h2{
    font-size: 32px;
    line-height: 48px;
 }
 .services-container{
    padding: 5px 25px;
 }
  
 /* End of services */

 /* Start of team section */
 .team-section h2{
    font-size: 32px;
    line-height: 48px;
 }


 /* end of team section */

  /* Start of contact us */
  .contact-us-text{
    height:502px;
    padding: 60px 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .contact-us p{
    font-size: 40px;
    line-height: 56px;
  }

  /* End of contact us */

 /* Start of about-hero */
 .about-hero h4{
    font-size:24px ;
    line-height:26px;
  }
.about-hero h2{
    font-size:32px;
    line-height:38px;
}
 /* End of about-hero */





}


