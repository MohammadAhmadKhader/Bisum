/* font-family: Poppins, sans-serif ;*/
@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,900;1,300;1,400;1,500;1,600;1,700&family=Raleway:wght@100;300;400;500;700;800;900&display=swap');
:root{
    --MainColor:#00234D;
    --SecondaryColor: #F76B6A;
    
}
body{font-family: 'Poppins', sans-serif ;}
.bg-MainColor{background-color:var(--MainColor) !important;}
.MainColor{color:var(--MainColor) !important;}
.bg-SecondaryColor{background-color:var(--SecondaryColor) !important;}
.SecondaryColor{color:var(--SecondaryColor) !important;}
/* Main classes above! ^ */

/* Announcement bar start */
.announcement-bar{ 
    font-size: 14px;
    font-weight: 400;
    padding-block:0.62rem;
  }

  .login span{
    cursor: pointer;
    text-decoration: none;
    letter-spacing: 0.5px;
  }
  .login svg{
    height:12px;
    width:12px;
    margin-right: 2px;
  }
  .login a{
    cursor: pointer;
  }
  
  .flag-USA{width:20px;}
  .chevron-down{
    width:18px;
    height:18px;
    cursor: pointer;
  }
  .icon.icon-dropdown{
    stroke-width: 1.5px;
  }
  .sales{
    letter-spacing: 0.5px;
  }
  .phone-number{
    letter-spacing: 0.5px;
  }
  
  /* Announcement bar ends */


/* start of Navbar */
.home-drop-down{
    position: absolute;
    width: 190%;
    top:58px;
    background-color: white;
    list-style: none; 
    padding-left: 22px;
  }
  .home-drop-down li{
     padding-right: 20px;
     padding-top: 10px;
     cursor: pointer;
     color:#444 !important;
     transition: 0.3s;
     font-size: 14px;
     font-weight: 400;
     line-height: 21px;
  }
  .shop-drop-down{
    width: 100%;
    position: absolute;
    top:75px;
    left:0px;
    right:0px;
    background-color: white;
  }
  .shop-list-title{
    color:#000;
    text-decoration: none;
    border-bottom:1px solid #ccc;
    font-size: 14px;
    font-weight: 500;
    line-height: 21px;
  }
  .shop-list-title:hover{
    cursor: pointer;
  }
  .hover-special{
    transition: 0.3s;
    font-size: 14px;
    font-weight: 400;
    margin-bottom:20px;
  }
  .hover-special:hover{
    color: var(--SecondaryColor)!important;
    cursor: pointer;
  }
  .featured-collection h2{
    font-size: 16px;
    font-weight:500 ;
    line-height: 26.88px;
  }
  .featured-collection img{
    max-width: 100%;
  }
  .featured-collection img:hover,.featured-collection h2:hover,.featured-collection a:hover{
    cursor: pointer;
    transition: 0.3s;
  }
  .hover-secondary:hover{color:var(--SecondaryColor) !important;}
  /* TODO Need to put a layer when hover on this image */
  /* .featured-collection img:hover{
    background:linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5));
    height:100px;
    cursor: pointer;
    z-index: 5;
  } */
  .arrow-position{
    position:absolute;
    top:13px;
  }
  .nav-item{
    font-size: 15px;
    line-height: 22.5px;
    font-weight: 500;
  }
  .home-drop-down li:hover{
    color:var(--SecondaryColor) !important;
  }
  .nav-item .active{
    color:var(--SecondaryColor) !important;
  }
  /*? ADDED NEWLY  */
  .navBorder{
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .nav-icons svg{
    width:22px;
    height:22px;
    cursor: pointer;
  }
  
  /* end of navbar */
  
  /* Begginning of breadcrumb */
  ._breadCrumb{
    margin-top: 30px;
  }
  ._breadCrumb ul{
    list-style: none;
    padding-left: 0;
    margin-left: 0;
    column-gap: 0.65rem;
  }
  ._breadCrumb li i{
     margin-top:12px;
     opacity: 0.4;
  }

  /* End of breadCrumb */


  /* Start of about-hero */
  .about-hero{
    margin-top: 100px;
  }
  .about-hero h4{
    font-size:34px ;
    line-height:37.06px ;
    font-weight:600 ;
    letter-spacing:0.25px ;

  }
  .about-hero p{
    font-size: 16px;
    line-height:27.04px ;
    font-weight:400 ;
    opacity: 0.6;
    letter-spacing:0.5px ;
  }
  .about-hero h2{
    font-size:42px;
    font-weight:600;
    line-height:54.18px;
  }
  .bg-special{
    background: url("../img/About/about-hero/count-bg.png") no-repeat;
    background-size: contain;
    background-position: center center;
    min-width:63px !important;
    height:63px !important;
    
    text-align: center;
  }
  .fonted-numbers{
    font-size: 24px;
    font-weight: 700;
    line-height: 24px;
    color:white;
  }
  /* End of about-hero */


  /* Start of promotional */
  .promotional img{
    object-fit: fill;
    width:100%;
  }
  .promo-text{
   inset: 0;
   padding: 10% 13%;
   z-index: 2;
 }
  .promo-text h2{
    font-size:40px;
    line-height:56px;
    font-weight: 600;
    letter-spacing:-0.03em ;
    color:white;

 }
 .promo-text p{
    font-size:24px ;
    line-height: 36px;
    font-weight: 600;
    letter-spacing:-0.03em;
    color: white;
    opacity: 0.7;
 }
 .overlay-1{
    position: absolute;
    inset:0;
    background: linear-gradient(rgba(0, 35, 77,0.8),rgba(0, 35, 77,0.8));
    z-index: 1;
    isolation: isolate;
 }
 .overlay-2{
    position: absolute;
    inset:0;
    background: linear-gradient(rgba(0,0,0,0.8),rgba(0,0,0,0.8)) ;
    z-index: 1;
    isolation: isolate;
 }
 .overlay-3{
    position: absolute;
    inset:0;
    background:linear-gradient(rgba(255, 174, 0,0.8),rgba(255, 174, 0,0.8));
    z-index: 1;
    isolation: isolate;
 }



  /* End of promotional */

  /* Start of services */
 .services{
    background-color: #F8F8F8;
 }
  .services-title{
    max-width: 752px;
 }
  .services h2{
    font-size: 48px;
    font-weight: 600;
    line-height: 72px;
 }
  
  .icon-orange{
    width:80px;
    height:80px;
    border-radius: 50%;
    background-color:#FFAE00 ;
  }
  .services-text h4{
    font-size:18px;
    font-weight:500 ;
    line-height:27px ;
    letter-spacing:0.5px;
  }
  .services-text p{
    font-size: 16px;
    font-weight:400;
    line-height:27.04px;
    letter-spacing:0.5px ;
    opacity: 0.8;
  }
  .services-container{
    padding: 40px 70px;
  }

  /* End of services */


  /* start of team section */
  .team-section h2{
    font-size: 48px;
    line-height: 72px;
    font-weight: 600;
  }
  .member-card{
    padding: 0;
  }
  .image-text{
    bottom:0%;
    left:0%;
    right:0%;
  }
  .image-text h4{
    font-size: 24px;
    font-weight:500 ;
    line-height:28.8px ;
    letter-spacing:0.5px ;


  }
  .image-text p{
    font-size:16px ;
    font-weight:400;
    line-height:27.04px ;
    opacity: 0.7;
    letter-spacing: 0.5px;

  }
  .image-text h4, .image-text p{
    margin-bottom: 0;
  }


  /* End of team section */


  /* Start of contact-use */
  .contact-us{
    background: url("/assets/img/About/Contact-us/banner.jpg");
    background-repeat: no-repeat;
    height: 502px;
  }
  .text-layer{
    left:0%;
    top:0;
    bottom:0;
  }
  .contact-us-text{
    height:502px;
    padding-inline:90px;
    padding-block: 65px;
    max-width:729px;
  }
  .contact-us p{
    font-size: 48px;
    font-weight: 600;
    line-height: 67.2px;
  }
  .contact-us a{
    text-align: center;
    line-height: 29px;
    display: inline-block;
    font-size: 14px;
    font-weight: 500;
    height: 44px;
    width: 140px;
    background-color: #FFAE00;
    transition: 0.3s;
  }
  .contact-us a:hover{
    cursor: pointer;
    color: #0a58ca !important;
  }

  /* End of contact us */


/* Start of footer */
.footer{
  background-color: rgb(7,28,31);
}
.footer h4{
   font-size: 18px;
   font-weight: 500;
   line-height: 21px;
   color:white;
}
.footer h4:hover{
   cursor:default;
}
.footer .footer-list a{
  font-size: 16px;
  font-weight: 400;
  line-height: 1.5;
  letter-spacing: 0.5px;
  text-decoration: none;
  transition: 0.3s;
  color:white;
  opacity: 0.7;
}
.footer .footer-list a:hover{
   cursor: pointer;
   opacity: 1;
   color:white;
}
.footer .footer-logo{cursor: pointer;}
.logo-form ul{list-style: none;}
.logo-form ul li{display: inline;}
.footer input:focus{
  box-shadow: none;
  border-color:rgba(255, 255, 255, 1) !important;
}
.footer input:focus::placeholder{
  color:rgba(7, 28, 31, 0.65) !important;
}
.footer input{
   border-color:rgba(255, 255,255, 0.5) !important;
}
.footer span{
  border: 1px white solid;
  cursor: pointer;
  font-size: 14px;
  font-weight: 500;
  line-height: 16.8px;
  padding-inline: 30px;
}
.footer input{
  background-color: rgb(7,28,31);
  color:white !important;
  font-size: 14px;
  font-weight: 400;
  line-height: 22.96px;
}
.footer input:focus{
  background-color: rgb(7,28,31);
}
.footer input::placeholder{
  width: 100%;
  color:rgba(255, 255, 255, 0.45) ;
}
.logo-form p{
  font-size:16px;
  font-weight:400;
  line-height:24px;
  color:white;
  opacity: 0.7;
}
.icons-list{margin-top: 33px;}
.icons-list i{cursor: pointer;}
.footer h4{margin-bottom: 38px;}

.bottom-footer{
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}
.bottom-footer{
  color:white;
  opacity: 0.7;
  letter-spacing: 0.5px;
  
}
.bottom-footer a{
  transition: 0.3s !important;
  opacity: 0.7;

}
.bottom-footer a:hover{
  opacity: 1 !important;
  cursor: pointer;
}
.upper-footer{
  padding-bottom: 35px;
}

/* End of footer */







