/* Special */
@media (min-width: 0px) and (max-width:390px){
  .bottom-footer ul{
    display: block !important;
  }
  .bottom-footer ul li{
    display: block !important;
    margin-inline: 0!important;
    margin-top: 8px;
  }
}


/* start of sm */
@media (min-width: 0px) and (max-width:575px){
        /* start of global */
        .container > h2{
            font-size: 32px  !important;
            line-height: 48px;
          }
    /* end of global */
    
    /* start of bar announcement */
    .sales{
        margin: auto;
    }
    .phone-number,.login{
        display: none;
    }
    .disappear{
      display: none;
  }
    /* End of bar announcement */


      /* Start of form */
      .context-container{
        margin-top: 80px !important;
        padding: 40px 20px;
        box-shadow: 0px 0px 8px rgba(12, 18, 38, 0.12);
      }
      .context-container h2{
        font-size: 32px;
        font-weight: 600;
        line-height: 48px;
      }
      .context-container p{
        font-size: 16px;
        font-weight: 400;
        line-height: 24px;
      }

    /* End of form */
}
/* end of sm */

