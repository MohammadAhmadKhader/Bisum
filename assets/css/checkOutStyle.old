/* font-family: Poppins, sans-serif ;*/
@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,900;1,300;1,400;1,500;1,600;1,700&family=Raleway:wght@100;300;400;500;700;800;900&display=swap');
:root{
    --MainColor:#00234D;
    --SecondaryColor: #F76B6A;
    
}
body{font-family: 'Poppins', sans-serif ;}
.bg-MainColor{background-color:var(--MainColor) !important;}
.MainColor{color:var(--MainColor) !important;}
.bg-SecondaryColor{background-color:var(--SecondaryColor) !important;}
.SecondaryColor{color:var(--SecondaryColor) !important;}
/* Main classes above! ^ */

/* Announcement bar start */
.announcement-bar{ 
    font-size: 14px;
    font-weight: 400;
    padding-block:0.62rem;
  }
  
  .login span{
    cursor: pointer;
    text-decoration: none;
    letter-spacing: 0.5px;
  }
  .login svg{
    height:12px;
    width:12px;
    margin-right: 2px;
  }
  .login a{
    cursor: pointer;
  }
  
  .flag-USA{width:20px;}
  .chevron-down{
    width:18px;
    height:18px;
    cursor: pointer;
  }
  .icon.icon-dropdown{
    stroke-width: 1.5px;
  }
  .sales{
    letter-spacing: 0.5px;
  }
  .phone-number{
    letter-spacing: 0.5px;
  }
  
  /* Announcement bar ends */
  
  /* start of Navbar */
  nav{
    z-index: 1000;
  }
  .nav-link:hover{
    color: var(--SecondaryColor)  !important;
  }
  .navbar-toggler{
    border:none;
  }
  .navbar-toggler:focus{
    box-shadow:none !important;
  } 
  .dropdown-menu{
    z-index: 999999999999;
    padding: 8px !important;
    min-width:70px !important;
  }
  .dropdown-item:hover{
    background-color: white;
  }
  .dropdown-item{
    padding: 0px;
    font-size: 14px;
    line-height: 27px;
  }
  .dropdown-menu.flags img{
    width:20px;
    height:12px;
  }
  .home-drop-down-container{
    transition:0.3s ;
  }
  .home-drop-down{
    position: absolute;
    width: 190%;
    background-color: white;
    list-style: none; 
    padding-left: 22px;
    white-space: nowrap;
  }
  .home-drop-down li{
     padding-right: 20px;
     padding-top: 10px;
     cursor: pointer;
     color:#444 !important;
     transition: 0.3s;
     font-size: 14px;
     font-weight: 400;
     line-height: 21px;
  }
  .shop-drop-down{
    width: 100%;
    position: absolute;
    top:75px;
    left:0px;
    right:0px;
    background-color: white;
  }
  .shop-list-title{
    color:#000;
    text-decoration: none;
    border-bottom:1px solid #ccc;
    font-size: 14px;
    font-weight: 500;
    line-height: 21px;
  }
  .shop-list-title:hover{
    cursor: pointer;
  }
  .hover-special{
    transition: 0.3s;
    font-size: 14px;
    font-weight: 400;
    margin-bottom:20px;
  }
  .hover-special:hover{
    color: var(--SecondaryColor)!important;
    cursor: pointer;
  }
  .featured-collection h2{
    font-size: 16px;
    font-weight:500 ;
    line-height: 26.88px;
  }
  .featured-collection img{
    max-width: 100%;
  }
  .featured-collection img:hover,.featured-collection h2:hover,.featured-collection a:hover{
    cursor: pointer;
    transition: 0.3s;
  }
  .hover-secondary:hover{color:var(--SecondaryColor) !important;}
  /* TODO Need to put a layer when hover on this image */
  /* .featured-collection img:hover{
    background:linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5));
    height:100px;
    cursor: pointer;
    z-index: 5;
  } */
  .arrow-position{
    position:absolute;
    top:13px;
  }
  .nav-item{
    font-size: 15px;
    line-height: 22.5px;
    font-weight: 500;
  
  }
  .home-drop-down li:hover{
    color:var(--SecondaryColor) !important;
  }
  .nav-item .active{
    color:var(--SecondaryColor) !important;
  }
  .navBorder{
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }
  #nav-blog-list{
    top:75px;
    font-size: 14px;
    font-weight: 400;
    line-height: 22.5px;
  }
  #nav-blog-list a{
    transition: 0.3s;
  }
  #nav-blog-list li{
    padding-top: 10px;
    padding-right: 20px;
  }
  #nav-blog-list a:hover{
    cursor: pointer;
    color:var(--SecondaryColor) !important;
  }
  
  #nav-pages-list{
    width: 198px;
    top:60px;
    /* top:75; when click on its tab */
    font-size: 14px;
    font-weight: 400;
    line-height: 22.5px;
  }
  #nav-pages-list a{
    transition: 0.3s;
  }
  #nav-pages-list li{
    padding-top: 10px;
    padding-right: 20px;
  }
  #nav-pages-list a:hover{
    cursor: pointer;
    color:var(--SecondaryColor) !important;
  }
  #nav-pages-list , #nav-blog-list{
    transition: 0.3s;
  }
  
  /* Solving transition issue with JS */
  .shop-drop-down , .home-drop-down{
    transition: 0.3s;
  }
  .noOpacity{
    opacity: 0;
  }
  .fullOpacity{
    transition: 1s;
  } 
  .special-simple-product{
    transition: 0.3s;
  }
  .cursor-sec:hover{
     cursor: pointer;
     color: var(--SecondaryColor) !important;
  }
  /* end of navbar */

  /* Start of OffCanvas */
.offcanvas div ul li div a{
    white-space:nowrap;
  }
  .offcanvas h5{
    white-space:nowrap;
  }
  #offcanvasWithBothOptions{
    overflow: hidden;
  }
  .offcanvas h5{
    font-weight: 600;
    line-height: 24px;
  }
  .border-bottom{
    border-bottom:1px solid rgba(0,0,0,0.1);
  }
  .offcanvas-upper-list svg a{
    font-size:16px;
    line-height:24px;
    transition: 0.3s;
  }
  .offcanvas-lower-list a{
    font-size:14px;
    line-height:24px;
  }
  .offcanvas-lower-list>*:hover{
    cursor: pointer;
  }
  .offcanvas-upper-list:hover{
    cursor: pointer;
    color: var(--SecondaryColor) !important;
  }
  .offcanvas-upper-list a:hover{
    color:var(--SecondaryColor) !important;
  }
  .offcanvas-upper-list li:hover svg{
    cursor: pointer;
    color: var(--SecondaryColor) !important;
  }
  .offcanvas-1st-layer{
    z-index:1;
    background-color: white;
    height:100%;
    width:0%;
    right:0;
    overflow: hidden;
    transition: 0.5s;
  }
  .offcanvas-1st-layer a{
    transition: 0.3s;
    font-size: 13px;
    font-weight: 500;
    line-height: 19.5px;
  }
  .offcanvas-2nd-layer{
    z-index:2;
    background-color: white;
    height:100%;
    transition: 0.5s;
    width:0%;
    right:0;
  }
  .offcanvas-2nd-layer li svg{
    font-size: 15px;
    font-weight: 500;
    
  }
  .offcanvas-2nd-layer li{
    padding-block: 12.8px;
  }
  .offcanvas-2nd-layer a{
    transition: 0.3s;
    font-size: 13px;
    font-weight: 500;
    line-height: 19.5px;
  }
  .offcanvas-3rd-layer{
    z-index:3;
    background-color: white;
    height:100%;
    transition: 0.5s;
    overflow: hidden;
    width:0%;
    right:0;
  }
  .offcanvas-3rd-layer a{
    transition: 0.3s;
    font-size: 13px;
    font-weight: 500;
    line-height: 19.5px;
  }
  .offcanvas-3rd-layer li{
    padding-block: 12.8px;
  }
  .SecondaryColorHover:hover{
    color: var(--SecondaryColor) !important;
  }
  .offcanvas-4th-1-layer{
    z-index:4;
    background-color: white;
    height:100%;
    transition: 0.5s;
    overflow: hidden;
    width:0%;
    right:0;
  }
  .offcanvas-4th-1-layer a{
    transition: 0.3s;
    font-size: 13px;
    font-weight: 500;
    line-height: 19.5px;
  }
  .offcanvas-4th-1-layer li{
    padding-block: 12.8px;
  }
  .offcanvas-4th-2-layer{
    z-index:5;
    background-color: white;
    height:100%;
    transition: 0.5s;
    overflow: hidden;
    width:0%;
    right:0;
  }
  .offcanvas-4th-2-layer a{
    transition: 0.3s;
    font-size: 13px;
    font-weight: 500;
    line-height: 19.5px;
  }
  .offcanvas-4th-2-layer li{
    padding-block: 12.8px;
  }
  .offcanvas-4th-3-layer{
    z-index:6;
    background-color: white;
    height:100%;
    transition: 0.5s;
    overflow: hidden;
    width:0%;
    right:0;
  }
  .offcanvas-4th-3-layer a{
    transition: 0.3s;
    font-size: 13px;
    font-weight: 500;
    line-height: 19.5px;
  }
  .offcanvas-4th-3-layer li{
    padding-block: 12.8px;
  }
  
  
  /* End of Offcanvas */
  
  /* Search drop-down */
  /* TODO ADD javascript code that increase the height to 100 when press on search button on Navbar */
  .search-dropdown{
    height:0px;
    transition: 0.4s;
  }
  .search-dropdown>div{
    z-index: 1;
  }
  .search-dropdown [search-dropdown]{
    height:0px;
    opacity: 0;
    transition: 0.4s;
  }
  [close-btn]{
    transition: 0.4s;
  }
  /* End of search dropdown */

  /* Start of CartOffCanvas */
.cart-OffCanvas input{
    width:50px;
    outline: none;
    font-size: 13px;
    line-height:19.5px;
    height:35px;
  }
  .input-group input::placeholder{
    font-size: 13px;
  }
  .cart-OffCanvas .input-group-text{
    padding-inline: 9px;
    padding-block: 4px;
    user-select: none;
    height:35px;
  }
  .input-group-text:hover{
    cursor: pointer;
  }
  
  .cart-OffCanvas input{
    border:1px solid rgba(0,0,0,0.1);
    text-align: center;
  }
  .remove-a{
    font-size: 11px;
    line-height: 11px;
    color: black;
    margin-left: 6px;
    transition: 0.3s;
  }
  .remove-a:hover{
    cursor: pointer;
    color:var(--SecondaryColor);
    text-decoration: none !important;
  }
  .cart-OffCanvas p{
    font-size: 13px;
    line-height: 19.5px;
  }
  .cart-OffCanvas h2{
    font-size: 15px;
    font-weight: 500;
    line-height: 19.5px;
    transition: 0.3s;
  }
  .cart-OffCanvas h2:hover{
    color: var(--SecondaryColor) !important;
    cursor: pointer;
  }
  .cart-OffCanvas .cart-item{
    padding:8px 8px;
  }
  .cart-OffCanvas img{
    width: 80px !important;
    height:100px;
  }
  .cursor-p{
    cursor: pointer;
  }
  .search-dropdown input{
    border:none;
    outline:none;
  }
  .search-dropdown input:focus{
    border:none;
  }
  .search-dropdown button{
    opacity:1 !important;
    font-size: 12.5px;
  }
  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button {
    -webkit-appearance: none;
  }
  .offcanvas-subtotal hr{
    margin-bottom: 13px;
  }
  .offcanvas-subtotal .subtotal-price{
    margin-inline: 13px;
    margin-bottom: 15px;
    font-size: 16px;
    font-weight: 500;
    line-height: 24px;
  }
  .offcanvas-subtotal p{
    font-size:12px ;
    line-height:18px ;
    text-align: center;
    margin-block: 20px;
    letter-spacing: 0.5px;
  }
  .offcanvas-subtotal{
    margin-top: auto;
  }
  .offcanvas-subtotal-btns{
    display: flex;
    justify-content: space-around;
    margin-bottom: 10px;
  }
  .offcanvas-subtotal-btns a{
    display: inline-block;
    height: 40px;
    width:170px;
    text-align: center;
    padding-block: 11px;
    font-size: 14px;
    line-height: 14px;
    font-weight: 500;
    letter-spacing: 0.5px;
  }
  .offcanvas-subtotal-btns a:hover{
    cursor: pointer;
  }
  .offcanvas-subtotal-btns .view-chart{
    color:var(--MainColor);
    border:1px solid var(--MainColor);
    
  }
  .offcanvas-subtotal-btns .view-chart:hover{
    background-color: var(--MainColor);
    color:white;
  }
  /* End of CartOffCanvas */

  /* Start of breadCrumb*/
  ._breadCrumb{
    margin-top: 30px;
  }
  ._breadCrumb ul{
    list-style: none;
    padding-left: 0;
    margin-left: 0;
    column-gap: 0.65rem;
  }
  ._breadCrumb li i{
     margin-top:12px;
     opacity: 0.4;
  }

  /* End of breadCrumb */

  /* Start of Checkout */
  .check-out-title{
    font-size:48px;
    line-height:72px;
    font-weight:600;
    margin-top: -15px;
  }
  .check-out{
    margin-top: 100px;
  }
  .circles-list{
    margin-top: 40px;
  }
  .bg-done{
    background-color: var(--MainColor);
    color:white;
  }
  .bg-done::before{
    content: "";
    position: absolute;
    height:7px;
    top:50%;
    left:-140%;
    transform: translateY(-50%);
    z-index: -1;
    background-color: var(--MainColor);
    width:400%;
    border-radius: 4px;
  }
  .bg-done.special::before{
    left:-150%;
    width:240%;
  }
  .bg-notDone{
    background-color: #f5f5f5;
    color:var(--MainColor);
  }
  .bg-notDone.special::before{
    left:-300%;
    width:300%;
  }
  .bg-notDone::before{
    content: "";
    position: absolute;
    height:7px;
    top:50%;
    left:-300%;
    background-color: #f5f5f5;
    z-index: -1;
    transform: translateY(-50%);
    width:530%;
    border-radius: 4px;
  }
  .bg-circle{
    height:50px;
    width:50px;
    line-height: 50px;
    border-radius: 50%;
    text-align: center;
  }
  .user-profile{
    margin-top: 80px;
    padding: 40px;
  }
  .user-profile img{
    border-radius: 50%;
  }
  .user-profile h2{
    font-size:16px;
    line-height:1.5;
    font-weight:500;
  }
  .user-profile p{
    font-size:14px;
    line-height:21px;
    font-weight:500;
  }
  .edit-porfile-btn{
    color:black;
    background-color: #FFAE00;
    border: 1px solid #FFAE00;
    transition: 0.3s;
    padding-inline:17px;
    height:40px;
    display: flex;
    align-items: center;
    font-size:14px;
    font-weight:500;
    line-height:14px;
  }
  .edit-porfile-btn:hover{
    color:white;
    background-color: var(--MainColor);
    cursor: pointer;
  }
  .shipping-address h2{
    font-size:17px;
    line-height:24px;
    font-weight:500;
  }
  .shipping-address label{
    display: block;
    font-size: 14px;
    line-height: 23.66px;
    color:#333333;
  }
  .shipping-address select{
    font-size: 14px;
    line-height: 24px;
    height:34px;
    border-radius: 4px;
  }
  .shipping-address input:not([type="checkbox"]){
    font-size: 14px;
    width:100%;
    height:34px;
    border:1px solid rgba(0,0,0,0.1);
    border-radius: 4px;
  }
  .shipping-address input:focus{
    outline: none;
  }
  .shipping-address input::placeholder{
    font-size: 14px;
    line-height: 23.66px;
    color:#333333;
  }
  .shipping-address select:focus{
    outline: none;
    box-shadow: none;
  }
  .shipping-address button{
    width:100% !important;
    height:40px;
    font-size: 14px;
    font-weight: 500;
    line-height: 14px;
    letter-spacing: 0.5px;
  }
  .back-to-cart{
    color:var(--MainColor);
    border: var(--MainColor) 1px solid;
    background-color: white;
    transition: 0.3s;
  }
  .back-to-cart:hover{
    background-color: var(--MainColor);
    color:white;
  }
  .proceed-to-shipping{
    background-color: var(--MainColor);
    color:white;
  }

  .summary-cart-item p{
    font-size: 13px;
    line-height: 19.5px;
  }
  .summary-cart-item h2{
    font-size: 15px;
    font-weight: 500;
    line-height: 19.5px;
    transition: 0.3s;
  }
  .summary-cart-item h2:hover{
    color: var(--SecondaryColor) !important;
    cursor: pointer;
  }
  .summary-cart-item .cart-item{
    padding:8px 8px;
  }
  .summary-cart-item img{
    width: 80px !important;
    height:100px;
  }
  .promo-input{
    border:none;
    outline:none;
    background-color:#EAEAEA;
    font-size:14px;
    line-height:1.69;
    height:40px;
    padding-inline: 17px;
    opacity: 0.6;
  }
  .order-summary button{
    font-size:14px;
    line-height:14px;
    font-weight:500;
    height:40px;
    color:var(--MainColor);
    border:1px solid var(--MainColor);
    background: white;
    transition: 0.3s;
  }
  .order-summary button:hover{
    color:white;
    background: var(--MainColor);
  }
  .order-summary h3{
    font-size:24px;
    line-height:29px;
    font-weight:500 ;
    margin-bottom: 35px;
  }
  .order-summary-box-shadow{
    box-shadow: 0px 0px 8px rgba(12, 18, 38, 0.06);
  }
  
  /* End of checkout */


  